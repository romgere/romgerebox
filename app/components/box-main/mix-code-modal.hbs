<Misc::UkModal @onClose={{@onHide}}>
  <h2 class="uk-modal-title">{{t 'box_main.mix_code_title'}}</h2>
  <p class="uk-text-center">
    {{t 'box_main.mix_code_notice'}}
  </p>
  <p class="uk-text-lead uk-text-primary uk-text-center" data-test-mix-code>
    <FaIcon @icon="tag" />
    {{@mixCode}}
  </p>
  <p class="uk-text-right">
    <button
      type="button"
      class="uk-button uk-button-primary"
      data-test-close-modal
      {{on "click" @onHide}}
    >
      {{t 'box_main.mix_code_close_btn'}}
    </button>
  </p>
</Misc::UkModal>